{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "outDir": "./dist"
  },
  "include": ["scripts/**/*", "test/**/*", "contracts/**/*", "hardhat.config.ts"],
  "exclude": ["node_modules", "dist", "src"]
}